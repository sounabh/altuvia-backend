  universityId        String
  programId           String?
  structureName       String
  structureType       String
  academicYear        String
  tuitionFee          Float
  admissionFee        Float?    @default(0)
  registrationFee     Float?    @default(0)
  examFee             Float?    @default(0)
  libraryFee          Float?    @default(0)
  labFee              Float?    @default(0)
