model UniversityImage {
  id           String   @id @default(cuid())
  universityId String
  imageUrl     String
  imageType    String?
  imageTitle   String?
  imageAltText String
  imageCaption String?
  fileSize     Int?
  width        Int?
  height       Int?
  isPrimary    Boolean  @default(false)
