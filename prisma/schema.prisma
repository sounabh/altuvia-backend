// Individual Answer Records for detailed tracking
model PersonalityAnswer {
  id        String   @id @default(cuid())
  userId    String
  profileId String
  
  // Question Identification
  moduleId       String   // leadership, teamwork, analytical, etc.
  questionId     String   // lead_1, team_2, career_goal, etc.
  trait          String   // leadership_orientation, career_priority, etc.
  
  // Answer Data
  answerValue    String   // "5" for scale, "high_salary" for MCQ, etc.
  answerType     String   // scale, mcq, rank
  questionText   String   // Store actual question for reference
  
  // Context & Metadata
  sessionId      String?  // Group answers from same session
  moduleIndex    Int      // Which module (0-13)
  questionIndex  Int      // Which question in module
  answeredAt     DateTime @default(now())
  
  // Analytics
  timeSpentSeconds Int?   // How long user took to answer
  wasChanged       Boolean @default(false)
  previousValue    String? // If answer was changed
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  profile PersonalityProfile @relation(fields: [profileId], references: [id], onDelete: Cascade)

  @@unique([userId, questionId, profileId])
  @@index([userId, moduleId])
  @@index([profileId])
  @@map("personality_answers")
}

// School Matching & Recommendations based on Personality
