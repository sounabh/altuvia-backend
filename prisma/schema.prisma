  universityId   String?
  schoolName     String
  programName    String?
  programType    String? // MBA, Executive MBA, etc.
  
  // === MATCH SCORES (0-100) ===
  overallMatchScore      Float  // Overall fit
  personalityMatchScore  Float? // Based on personality traits
  cultureMatchScore      Float? // Culture fit
  careerMatchScore       Float? // Career goals alignment
  academicMatchScore     Float? // Academic preferences
  locationMatchScore     Float? // Location preferences
  financialMatchScore    Float? // Budget fit
  
  // === DETAILED MATCHING FACTORS (JSON) ===
  matchingFactors      String?  // { leadership_fit: 95, team_culture: 88, ... }
  strengthsAlignment   String?  // ["Strong leadership program", "Collaborative culture", ...]
  considerationFactors String?  // ["High cost", "Competitive admission", ...]
  keyFeatures          String?  // ["Case method", "Strong finance placement", ...]
  
  // === RECOMMENDATION DATA ===
  isRecommended        Boolean  @default(true)
  recommendationRank   Int?     // 1, 2, 3, ... (lower = better)
  confidenceScore      Float?   // How confident is the match (0-100)
  
  // === SCHOOL CHARACTERISTICS (for matching) ===
  schoolCulture        String?  // collaborative, competitive, balanced
  classSize            String?  // small, medium, large
  locationCity         String?
  locationRegion       String?
  avgTuition           Float?
  placementRate        Float?
  
  // === USER INTERACTION ===
  isViewed             Boolean  @default(false)
  viewedAt             DateTime?
  isSaved              Boolean  @default(false)
  savedAt              DateTime?
  isApplied            Boolean  @default(false)
  appliedAt            DateTime?
  userRating           Int?     // 1-5 stars
  userFeedback         String?
  userNotes            String?
  
  // === METADATA ===
  matchGeneratedAt     DateTime @default(now())
  matchAlgorithmVersion String  @default("1.0")
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  profile      PersonalityProfile @relation(fields: [profileId], references: [id], onDelete: Cascade)
  university   University?        @relation(fields: [universityId], references: [id], onDelete: SetNull)

  @@index([userId, overallMatchScore])
  @@index([profileId])
  @@index([universityId])
  @@map("school_matches")
}